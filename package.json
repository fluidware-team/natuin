{
  "name": "natuin",
  "description": "Natuin is an alternative to Atuin API server",
  "version": "0.0.0",
  "scripts": {
    "prebuild": "node scripts/version-update.js",
    "build": "tsc -p tsconfig.build-prod.json",
    "env2doc:check": "env2doc -d -p dist > .env2doc-check.tmp && diff .env2doc-check.tmp ENVIRONMENT.md",
    "clean": "tsc --build --clean tsconfig.build-prod.json",
    "lint": "eslint src",
    "lint:fix": "eslint --fix src",
    "env2doc": "npm run -s build && env2doc -d -p dist > ENVIRONMENT.md",
    "preversion": "npm run lint && npm run test && npm run env2doc:check",
    "start": "node dist/otel.js",
    "start:dev": "NODE_OPTIONS=\"--trace-warnings\" TZ=utc nodemon src/otel.ts",
    "test": "jest"
  },
  "dependencies": {
    "@fluidware-it/express-microservice": "^0.3.1",
    "@fluidware-it/express-mysql2-middleware": "^0.2.0",
    "@fluidware-it/httpclient": "^0.3.0-rc.0",
    "@fluidware-it/mysql2-client": "^0.6.0",
    "@fluidware-it/saddlebag": "^0.1.1",
    "@opentelemetry/api": "^1.8.0",
    "@opentelemetry/exporter-metrics-otlp-grpc": "^0.49.1",
    "@opentelemetry/exporter-prometheus": "^0.49.1",
    "@opentelemetry/exporter-trace-otlp-grpc": "^0.49.1",
    "@opentelemetry/instrumentation-express": "^0.36.0",
    "@opentelemetry/instrumentation-grpc": "^0.49.1",
    "@opentelemetry/instrumentation-http": "^0.49.1",
    "@opentelemetry/instrumentation-mysql2": "^0.36.0",
    "@opentelemetry/instrumentation-pino": "^0.36.0",
    "@opentelemetry/resources": "^1.22.0",
    "@opentelemetry/sdk-metrics": "^1.22.0",
    "@opentelemetry/sdk-node": "^0.49.1",
    "@scalar/express-api-reference": "^0.2.68",
    "dotenv": "^16.3.1",
    "nodemailer": "^6.9.12",
    "pino": "^8.19.0",
    "prefixed-api-key": "^1.1.1",
    "pug": "^3.0.2",
    "semver": "^7.6.0",
    "ulid": "^2.3.0"
  },
  "devDependencies": {
    "@fluidware-it/env2doc": "^0.3.1",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.12",
    "@types/nodemailer": "^6.4.14",
    "@types/pug": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^7.1.1",
    "@typescript-eslint/parser": "^7.1.1",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "jest": "^29.7.0",
    "prettier": "^3.2.5",
    "testcontainers": "^10.7.2",
    "ts-jest": "^29.1.2",
    "typescript": "^5.4.2"
  },
  "optionalDependencies": {
    "nodemon": "^3.1.0",
    "ts-node": "^10.9.2"
  },
  "nodemonConfig": {
    "delay": 2000,
    "verbose": true,
    "execMap": {
      "ts": "ts-node"
    },
    "signal": "SIGTERM",
    "ext": "js,ts,json,yml,yaml",
    "watch": [
      "src",
      "openapi",
      ".env"
    ]
  },
  "engines": {
    "node": ">=20.10.0"
  }
}
