html(lang='en', dir='ltr')
    head
        meta(charset='utf-8')
        meta(name="viewport" content="width=device-width, initial-scale=1")
        title= title
        link(href="/static/bootstrap-5.3.3.min.css" rel="stylesheet")
        link(href="/static/style.css" rel="stylesheet")
    body.d-flex.py-5.bg-body-tertiary
        main.form-signin.w-100.mx-auto
            #validationok.d-none
                h1.h3.mb-3.fw-normal Thank you!
                h1.h3.mb-3.fw-normal Your account has been validated
            #formblock
                form(method='post', onsubmit='validate(); return false;')
                    h1.h1.mb-3.fw-normal.text-center Welcome to Natuin!
                    h2.h4.mb-3.fw-normal Please validate your account
                    .form-floating
                        input#floatingUsername.form-control(type='text' name="username" placeholder='macno', required='' autofocus='')
                        label(for='floatingUsername') Username
                    .form-floating
                        input#floatingPassword.form-control(type='password' name="password" placeholder='Password', required='')
                        label(for='floatingPassword') Password
                    .form-floating
                        input#floatingCode.form-control(type='text' name="code"  placeholder='PLUDF5RT', required='', autocomplete='off')
                        label(for='floatingCode') Validation code
                    button.btn.btn-primary.w-100.py-2(type='submit') Validate
                #alertBlock.alert.alert-danger.d-none
                    .h3.fw-normal
                        b.me-1 Error
                        span#errorMessage
            script(src="/static/validate.js")
